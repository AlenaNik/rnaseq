nextflow_pipeline {

    name "Test pipeline with QC disabled"
    script "../main.nf"
    tag "rnaseq"
    tag "PIPELINE"

    test("--skip_qc") {

        when {
            params {
                outdir        = "$outputDir"
                skip_qc       = true
            }
        }

        then {
            assert workflow.success
        }
    }
}
