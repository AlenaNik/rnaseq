nextflow_pipeline {

    name "Test pipeline with --pseudo_aligner salmon --skip_qc --skip_alignment"
    script "../main.nf"
    tag "RNASEQ"
    tag "PIPELINE"

    test("Parameters: --pseudo_aligner salmon --skip_qc --skip_alignment") {

        when {
            params {
                outdir = "$outputDir"
                pseudo_aligner = 'salmon'
                skip_qc = true
                skip_alignment = true
            }
        }

        then {
            assert workflow.success
        }
    }
}
